<div class="row">
    <div class="col-md-6">
	<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: "well"}) do |f| %>
	  <%= devise_error_messages! %>
	  <fieldset>
		  <legend>Sign up</legend>
		  <%= f.input :first_name, :input_html => {:size => 30} %>
		  <%= f.input :last_name, :input_html => {:size => 30} %> 
		  <%= f.input :profile_name, :input_html => {:size => 30} %>
		  <%= f.input :email, :input_html => {:size => 30} %>
		  <%= f.input :password, :input_html => {:size => 30} %>
		  <%= f.input :password_confirmation, :input_html => {:size => 30} %>
		  <div><%= f.button  :submit, "Sign Up", :class => 'btn-danger' %></div>
	  </fieldset>
	<% end %>
	<%= render "devise/shared/links" %>
	</div>
	<div class="col-md-4">
	  <h3>Registering is free and secure<h3>
     </div>
</div>
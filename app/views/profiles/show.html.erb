<div class="page-header">
	<%= image_tag @user.gravatar_url %>
	<h1><%= @user.full_name %></h1>
	<%= link_to "Add Friend", new_user_friendship_path(friend_id: @user), class: "btn btn-danger" %>
</div>

<% if @statuses %>
	<% @statuses.reverse_each do |status| %>
		<div class="well">
			<%= status.content %>
			<hr />
			<%= link_to time_ago_in_words(status.created_at) + " ago", status_path(status) %>
		</div>
	<% end %>
<% end %>